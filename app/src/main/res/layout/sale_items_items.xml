<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sale_layout"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/card1" >

    <TextView
        android:id="@+id/saleItems_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans"
        android:text="TextView"
        android:textColor="#FAF1F1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/saleItems_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#FAF1F1"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saleItems_name" />

    <TextView
        android:id="@+id/saleItems_quantity"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textColor="#FAF1F1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/saleItems_price"
        app:layout_constraintStart_toEndOf="@+id/saleItems_price"
        app:layout_constraintTop_toTopOf="@+id/saleItems_price" />

    <TextView
        android:id="@+id/saleItems_unit"
        android:layout_width="35dp"
        android:layout_height="14dp"
        android:layout_marginStart="2dp"
        android:text="TextView"
        android:textColor="#FAF1F1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/saleItems_quantity"
        app:layout_constraintStart_toEndOf="@+id/saleItems_quantity"
        app:layout_constraintTop_toTopOf="@+id/saleItems_quantity" />
</androidx.constraintlayout.widget.ConstraintLayout>